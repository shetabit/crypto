{
    "name": "shetabit/crypto",
    "type": "library",
    "description": "Laravel Crypto",
    "keywords": [
        "shetabit",
        "shetabit crypto",
        "crypto",
        "api crypto",
        "secure api",
        "api cipher",
        "laravel api crypto",
        "laravel secure api",
        "laravel api cipher"
    ],
    "homepage": "https://github.com/shetabit/crypto",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Khanzadi",
            "email": "khanzadimahdi@gmail.com",
            "homepage": "https://github.com/crypto",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/support": ">=5.1"
    },
    "require-dev": {
        "orchestra/testbench": "^4.4",
        "phpunit/phpunit": ">=8.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Shetabit\\Crypto\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Shetabit\\Crypto\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shetabit\\Crypto\\Provider\\CryptoServiceProvider"
            ],
            "aliases": {
                "Crypto": "Shetabit\\Crypto\\Facade\\Crypto"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
